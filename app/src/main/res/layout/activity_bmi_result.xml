<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BmiResultActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/viewBackground"
            android:background="#FF5722">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_mono"
                        android:textSize="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/aboutBmi"
                        android:src="@drawable/info"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="90sp"
                android:gravity="center"
                android:id="@+id/showBmiTextView"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_mono"
                android:text="28.5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overweight"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:id="@+id/bmiConditionTextView"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_mono"
                android:textSize="22dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#DBD7D6D7"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#DF3D3C3C"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:text="Gender"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:gravity="center"
                android:padding="15dp"
                android:id="@+id/showGenderTextView"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:textSize="24sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#d7d6d7"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#DF3D3C3C"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:text="Height"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.7ft"
                android:padding="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/showHeightTextView"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:textSize="24sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#d7d6d7"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#DF3D3C3C"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:text="Weight"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="78Kg"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/showWeightTextView"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:textSize="24sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#d7d6d7"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#DF3D3C3C"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:text="Age"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30Kg"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/showAgeTextView"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/roboto_mono"
                android:textSize="24sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate More"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="15dp"
            android:id="@+id/calculateMoreBtn"
            android:layout_marginBottom="10dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:background="@drawable/round_sceondery_button_100"
            android:textSize="26sp"/>
    </LinearLayout>



</LinearLayout>